<header>
    <%= render 'layouts/logo' %>
    <%= render 'layouts/nav' %>
</header>

<% @articles.each do |article| %>
    <div class='article'>
        <div class="title">
            <%= image_tag("arrow.png")%>
            <h1><%=article.title%></h1>
        </div>
        <div class='description'>
            <div class='info'>
                <h2>PubliÃ© <%= format_date(article.created_at)%> par <%= article.author%></h2>
            </div>
            <div class='heading'>
                <p><%= article.heading.html_safe %></p>
                <%= image_tag article.image, class: 'heading_image' %>
                <%= link_to "Lire l'article", article_path(article) %>
            </div>
        </div>
    </div>
<% end %>

<%= link_to_next_page @articles, 'Page suivante' %>

