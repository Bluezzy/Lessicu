<div class='select'>
    <select name="categurie" id="categurie">
        <option selected disabled>Choisir un thème</option>
    <% get_names(Theme).each do |themeName| %>
        <option value=<%=themeName%>><%=themeName%></option>
    <% end %>
        <option value="tout">Toutes les catégories</option>
    </select>
</div>

<div id="glossary" class="table-responsive">
    <table class="table">
        <tr class='titres'>
            <th>CORSU</th>
            <th>FRANÇAIS</th>
        </tr>
        <% @words.each do |word| %>
            <tr class="row_result" data-id=<%=word.id%>>
                <td><%= word.translation %></td>
                <td><%= word.name %></td>
                <td class='admin'><%= link_to 'Modifier', edit_word_path(word), :class => 'btn btn-warning btn-sm' %></td>
                <td class='admin'><%= button_to 'Supprimer', word_path(word), 
                method: :delete, :class => 'btn btn-danger btn-sm', data: { confirm: 'Êtes-vous sûr(e)?' } %></td>
            </tr>
        <% end %>
    </table>
</div>

<%= link_to_next_page @words, 'Page suivante' %>