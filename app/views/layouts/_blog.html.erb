<div class='blog_container'>
    <div class='blog'>
        <main class="articles">
            <% @articles.each do |article| %>
                <%= link_to article_path(article), class:'read_article' do %>
                    <div class='article'>
                        <div class="title">
                            <span class='pastille'><%= image_tag("arrow.png") %></span>
                            <h1><%=article.title%></h1>
                        </div>
                        <div class='description'>
                            <div class='info'>
                                <h2>PubliÃ© <%= format_date(article.created_at)%> par <%= article.author%></h2>
                            </div>
                            <div class='heading'>
                                <p><%= article.heading.html_safe %></p>
                                <%= image_tag article.image %>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </main>

        <aside>
            <ul class='categories'>
                <% @categories.each do |category| %>
                    <li class='category_item'>
                        <%= link_to category.name, category: category.name %>
                    </li>
                <% end %>
            </ul>
        </aside>
    </div>
</div>
<%= link_to_next_page @articles, 'Page suivante' %>