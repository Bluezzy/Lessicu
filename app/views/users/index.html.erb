<p id="notice"><%= notice %></p>

<h1>Membres</h1>

<table>
  <thead>
    <tr>
      <th>Pseudo</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Voir', user_path(user) %></td>
        <td><%= link_to 'Modifier', edit_user_path(user) %></td>
        <td><%= link_to 'Supprimer', user_path(user), method: :delete, data: { confirm: 'Êtes-vous sûr(e)?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

