<div class='full_article_container'>
    <% if admin? %>
        <div class='admin_article_options'>
            <%= link_to "Modifier", edit_article_path(@article), :class => 'edit_article' %>
            <%= button_to "Supprimer", article_path(@article), method: :delete, 
            :class => 'delete_article', data: { confirm: 'Êtes-vous sûr(e)?' } %>
        </div> 
    <% end %>

    <div class='full_article'>
        <div class='title'>
            <h1><%= @article.title%></h1>
            <span id="green_line"></span>
        </div>
        <div class='info'>
            <span class='date'><%= format_date(@article.created_at, Time.now, '') %></span><!--
            --><span class='author'><%= @article.author %></span>
        </div>
        <div class='heading'>
            <p><%=@article.heading%></p>
        </div>
        <div class='content'>
            <div class='image_container'><%= image_tag @article.image %></div>
            <%=@article.content%>
        </div>
        <%= link_to (content_tag(:i, nil, class: "fas fa-angle-double-left fa-2x")), articles_path %>
    </div>
</div>