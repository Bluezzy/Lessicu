<%= form_with model: [:admin, @article], local: true, class: 'edit_article_form', url: article_path(@article.id), method: :put  do |f| %>
    <%= f.label :title, "titre" %>
    <%= f.text_field :title,  :required => 'required' %>
    <%= f.label :author, "auteur" %>
    <%= f.text_field :author, :required => 'required' %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.label :content, "contenu" %>
    <%= f.text_area :content, :id => 'article_content' %>
    <%= f.submit "Modifier" %>
<% end %>