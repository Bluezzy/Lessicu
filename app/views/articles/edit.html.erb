<%= form_with model: @article, local: true, class: 'edit_article_form', url: article_path(@article.id), method: :put  do |f| %>
    <%= f.select :category, options_for_select(get_names(Category, @article.category.name)) %>
    <%= f.label :title, "titre" %>
    <%= f.text_field :title,  :required => 'required' %>
    <%= f.label :author, "auteur" %>
    <%= f.text_field :author, :required => 'required' %>
    <%= f.label :heading, "phrase d'accroche" %>
    <%= f.text_area :heading, :required => 'required' %>
    <%= f.label :content, "contenu" %>
    <%= f.rich_text_area :content, :id => 'article_content' %>
    <%= f.label :image, "image d'accroche" %>
    <%= f.file_field :image %>
    <%= f.submit "Modifier" %>
<% end %>